<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swansea.mancala.LoginView">
    <padding>
        <Insets bottom="50" left="100" right="100" top="50" />
    </padding>
    <Label text="Register a new account" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" />
   <TextField fx:id="firstNameField" promptText="First Name" />
   <TextField fx:id="lastNameField" layoutX="110.0" layoutY="122.0" promptText="Last Name" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
    <Button onAction="#registerNewUserButtonAction" text="Register and log in" />
    <Button fx:id="loginViewButton" onAction="#changeViewButtonAction" text="Go back" />
    <Label fx:id="errorMessage" textFill="RED" />
</VBox>
