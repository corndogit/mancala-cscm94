<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox id="main-menu" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" stylesheets="@stylesheets/menu-view.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swansea.mancala.MainMenuView">
   <children>
      <ImageView fitHeight="161.0" fitWidth="360.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/logo.png" />
         </image>
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
      </ImageView>
      <HBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="600.0" spacing="50.0">
         <children>
            <Button fx:id="profileButton" alignment="CENTER" minHeight="50.0" minWidth="75.0" mnemonicParsing="false" onAction="#mainMenuButtonClick" prefHeight="75.0" prefWidth="150.0" text="Profile" wrapText="true" />
            <Button fx:id="playGameButton" mnemonicParsing="false" onAction="#mainMenuButtonClick" prefHeight="75.0" prefWidth="150.0" text="Play game" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="howToPlayButton" mnemonicParsing="false" onAction="#mainMenuButtonClick" prefHeight="75.0" prefWidth="150.0" text="How to play" textAlignment="CENTER" wrapText="true" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="600.0" spacing="50.0">
         <children>
            <Button fx:id="settingsButton" alignment="CENTER" layoutX="310.0" layoutY="10.0" mnemonicParsing="false" onAction="#mainMenuButtonClick" prefHeight="75.0" prefWidth="150.0" text="Settings" wrapText="true" />
            <Button fx:id="leaderboardButton" alignment="CENTER" mnemonicParsing="false" onAction="#mainMenuButtonClick" prefHeight="75.0" prefWidth="150.0" text="Leaderboard" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#mainMenuButtonClick" prefHeight="75.0" prefWidth="150.0" text="Quit" wrapText="true" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
