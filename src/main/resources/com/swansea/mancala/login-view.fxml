<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swansea.mancala.LoginController">
    <padding>
        <Insets bottom="50" left="100" right="100" top="50" />
    </padding>
    <Label text="Log in to play Mancala" textAlignment="CENTER" wrapText="true" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button onAction="#loginButtonAction" text="Log in" />
    <Button fx:id="registerViewButton" onAction="#changeViewButtonAction" text="Register" />
    <Label fx:id="errorMessage" textFill="RED" />
</VBox>
